#cloud-config

<</* Start $state */>>
<< with $state := (machine_variable "state") >>

<< template $state . >>

coreos:
  update:
    reboot-strategy: etcd-lock
  units:
    - name: workspace-updater.service
      command: start
      content: |
        [Unit]
        Description=Blacksmith Kubernetes Workspace Updater
        Documentation=https://github.com/cafebazaar/blacksmith-kubernetes
        [Service]
        ExecStart=/usr/bin/bash /var/lib/blacksmith/workspace-updater.sh
        Restart=always
        RestartSec=10
        [Install]
        WantedBy=multi-user.target
write_files:
  - path: /etc/flannel/options.env
    encoding: "base64"
    permissions: "0444"
    owner: "root"
    content: << b64template "flannel-options.env" >>
  - path: /var/lib/blacksmith/workspace-updater.sh
    encoding: "base64"
    permissions: "0774"
    owner: "root"
    content: << b64template "workspace-updater.sh" >>


ssh_authorized_keys:
<< range $index, $element := (array_variable "ssh-keys") >>
  - << $element.Value >>
<<end>>
<</* End $ctx */>>
<< end >>
<< end >>
